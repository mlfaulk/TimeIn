                </div>
                <div class="col-md-1">
                    <%= image_tag("relax.png", class: "icon green") %>
                </div>
                <div class="col-md-1 lit">
                    <%= image_tag("check.png", class: "icon orange") %>
                </div>
                <div class="col-md-1">
                    <%= image_tag("character.png", class: "icon purple") %>
                </div>
                <div class="col-md-1">
                    <%= image_tag("strong.png", class: "icon blue") %>
                </div>
                <div class="col-md-1">
                    <%= image_tag("learn.png", class: "icon pink") %>
                </div>
                <div class="col-md-1">
                    <%= image_tag("done.png", class: "icon darkpink") %>
                </div>
