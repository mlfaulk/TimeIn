<div class="student-background">
	<p class="login-btn green-text small-motto col-md-2">Teacher Login</p>

	<div>
			<p class="title motto blue-text" id="start_btn" >
				<%= link_to "START", {controller: "students", action: "chill"}, id:"start_btn"%>
			</p>
			<div id="login-box" class="login-popup container col-md-4">
		<div class="teacher-icon">
	        <%= image_tag("teacher_icon.png") %>
		</div>
		<p class="login-text">Teacher Login</p>
	    <%= image_tag("close_pop.png", class: "close", alt:"X") %>
	    <%= form_tag(controller: "teachers", action: "post_teacher_login", method: "post") do %>

	  
	  	<div id="formholder">
	  		<%= label_tag 'Username:' %>
	        <%= text_field_tag(:username)%><br>
	        <%= label_tag 'Password:' %>
	        <%= password_field_tag(:password) %>
	        <div class="row filler"></div>

	        <!--<button class="submit button-login" type="button">Sign in</button>-->
	        <p class="submit rounded orange-text"><%= submit_tag("Sign In") %></p>

	        <p class="login-text">
	            <a class="forgot" href="#">Forgot?</a>
	        </p>        
	    </div>
	    <% end %>


	</div>
	</div>
    




	<script type="text/javascript">
		$(document).ready(function() {
		$('p.login-btn').click(function() {
		    
		    //Getting the variable's value from a link 
		    var loginBox = $('#login-box')

		    //Fade in the Popup
		    $(loginBox).fadeIn(300);
		    
		    //Set the center alignment padding + border see css style
		    var popMargTop = ($(loginBox).height() + 24) / 2; 
		    var popMargLeft = ($(loginBox).width() + 24) / 2; 
		    
		    $(loginBox).css({ 
		        'margin-top' : -popMargTop,
		        'margin-left' : -popMargLeft
		    });
		    
		    // Add the mask to body
		    $('.student-background').append('<div id="mask"></div>');
		    $('#mask').fadeIn(300);
		    		// When clicking on the button close or the mask layer the popup closed
			$('.close, #mask').on('click', function() { 
			      $('#mask , .login-popup').fadeOut(300 , function() {
			        $('#mask').remove();  
			       }); 
			      return false;
			    });
			});
		});


</script>
</div>


